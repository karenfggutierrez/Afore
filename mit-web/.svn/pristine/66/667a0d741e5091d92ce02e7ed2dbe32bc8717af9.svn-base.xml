<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J//EN" "http://logging.apache.org/log4j/docs/api/org/apache/log4j/xml/log4j.dtd">

<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'
	debug="true">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="jeveris: %d{dd MMM yyyy HH:mm:ss,SSS} %-5p %c - %m%n" />
		</layout>
	</appender>

	<appender name="file" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="jeveris.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="100KB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="jeveris: %d{dd MMM yyyy HH:mm:ss,SSS} %-5p %c - %m%n" />
		</layout>
	</appender>
	
	<appender name="nciWeb" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="mit_nci_web.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="20MB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyyMMdd HH:mm:ss,SSS} %-5p %c - %m%n" />
		</layout>
	</appender>

	<appender name="requestTimes" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="requestTimes.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="2MB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="jeveris: %d{dd MMM yyyy HH:mm:ss,SSS} %m%n" />
		</layout>
	</appender>
	
	<category name="com.jeveris">
		<level value="error" />
		<appender-ref ref="file" />
	</category>
	<category name="com.jeveris.SQLSTATS">
		<level value="info" />
		<appender-ref ref="console" />
	</category>
	
	<category name="org.springframework">
		<level value="info" />
	</category>
	<category name="mx.profuturo.nci.web.service.impl">
		<level value="info" />
	</category>
	<category name="mx.profuturo.nci.web.views">
		<level value="info" />
	</category>
	<category name="mx.profuturo.nci.repository">
		<level value="info" />
	</category>
	
	<category name="org.mybatis">
		<level value="info" />
	</category>
		
	<category name="org.apache">
		<level value="info" />
	</category>
	
	<category name="com.jeveris.core.web.filter" additivity="false">
		<level value="info" />
		<appender-ref ref="requestTimes" />
	</category>
	<root>
		<level value="error" />
    	<appender-ref ref="console" />
<!-- 		<appender-ref ref="nciWeb" /> -->
	</root>
</log4j:configuration>
