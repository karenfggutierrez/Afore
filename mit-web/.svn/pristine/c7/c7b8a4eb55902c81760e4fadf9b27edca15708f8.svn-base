@border: #dddddd;

ul.paginacion {
    overflow: hidden;
    list-style: none;
    margin: 0;
    padding: 0;
        li {
            float: left;
            margin: 0 0px;
            font-size: 12px;
            font-weight: 700;
            a {
                display: block;
                padding: 8px 15px;
                text-decoration: none !important;
                color: #00427a;
                border-left: 1px solid @border;
                border-top: 1px solid @border;
                border-bottom: 1px solid @border;
            }
            .actual {
                background: #f3f3f3;
                color: #99999e;
            }
            .anterior {
                border-radius: 4px 0px 0px 4px;
            }
            .siguiente {
                border-right: 1px solid @border;
                border-radius: 0px 4px 4px 0px;
            }
        }
}